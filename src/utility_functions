void updateLEDs()
{
  if(update)
  {
    if ((millis() - last_update) > interval) // time to update
    {
      last_update = millis();
      switch (active_program)
      {
        case NONE:
          break;
        case CUSTOM_LAMP:
          customLampUpdate();
          break;
        default:
          break;
      }
    }
  }
}

// Increment the Index and reset at the end
void incrementIndex(int *program_index, uint16_t *total_steps, int *increment_by1)
{
  *program_index = *program_index + *increment_by1;

  if (*program_index >= *total_steps)
  {
    *program_index = 0;
  }
}

void setHue1(uint8_t h) {
  hue1 = h;
}

void setSaturation1(uint8_t s) {
  saturation1 = s;
}

void setValue1(uint8_t v) {
  value1 = v;
}
